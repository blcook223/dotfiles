[user]
	email = benjamin.l.cook@gmail.com
	name = blcook223
[push]
	default = simple
[core]
	excludesfile = /Users/bcook/.gitignore_global
	editor = vim
[alias]
    co = checkout
    st = status
    ll = log --graph --decorate --pretty=oneline --abbrev-commit
[url "https://"]
	insteadOf = git://
[url "https://github.com/"]
        insteadOf = gh:
[url "https://gist.github.com/"]
        insteadOf = gist:
[url "https://bitbucket.org/"]
        insteadOf = bb:
[color]
        ui = true
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = green
        changed = yellow
        untracked = red

[credential]
	helper = osxkeychain
